{
  "name": "meristem-shared",
  "version": "0.1.0",
  "description": "Shared TypeScript types and interfaces for Meristem project",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && bun run build-types",
    "build-types": "tsc --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "check:no-runtime-deps": "bun run scripts/check-no-runtime-deps.ts",
    "prepare": "bun run build"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "@types/bun": "latest"
  },
  "keywords": [
    "meristem",
    "typescript",
    "types",
    "shared"
  ],
  "license": "MIT",
  "private": true
}
